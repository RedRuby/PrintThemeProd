              	baseZ: 2043,
              	boxShadow: '0 8px 16px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)',
            },
            onBlock: function() {
              setTimeout(function(){ $('.notify-ui').toggleClass('bounceInUp bounceOutDown'); }, 4500);
            },
           	onUnblock:	function(){
                       if(!type && !noreload){
                          show_message2('Try again or Reload', true);
                       }
            }
        });
  }
  
