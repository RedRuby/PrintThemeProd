<script type="text/javascript">
    var loader_enable = false;
    function freez() {
        $.blockUI({ 
            message: '<div id="freezTxt w3-transparent">'+((loader_enable) ? '<i class="fa fa-refresh fa-spin fa-2x w3-text-grey w3-margin w3-padding w3-opacity w3-transparent"></i>' : '')+'</div>', 
            overlayCSS: { backgroundColor: 'white', cursor: 'wait' },
            cursorReset: 'default', 
            css: { 
                top:  (window.innerHeight - 64) /2 + 'px', 
                left: (window.innerWidth - 64) /2 + 'px', 
                width: '64px',
                border: 'none',
              	baseZ: 2043,
                backgroundColor: 'transparent',
                centerX: true,
                centerY: true
            } 
        }); 

//         setTimeout($.unblockUI, 2000); <img src="https://cdn.shopify.com/s/files/1/1634/5803/files/3.gif?1846620989793874192">
    }
  	
  function show_message(message){
  	$.blockUI({ 
            message: $(message), 
            fadeIn: 700, 
            fadeOut: 700, 
            timeout: 3000, 
            showOverlay: false, 
            css: { 
                width: '350px',
               	height: '50px',
                top: (window.innerHeight - 60) + 'px', 
                left: (window.innerWidth - 350) /2 + 'px', 
                right: '', 
                border: 'none', 
                padding: '10px', 
                backgroundColor: '{{ settings.color_topbar_bg }}', 
                '-webkit-border-radius': '2px', 
                '-moz-border-radius': '2px', 
                opacity: .9, 
                color: '#fff',
              	baseZ: 2043,
            } 
        });
  }
  
  function defreez(){$.unblockUI(); $('.w3-loader').hide(); loader_enable = true;} 
  
  function show_message2(message,type,noreload){
  	$.blockUI({ 
            message: '<div class="growlUI-added"><h3 class="flash-messg w3-margin-0">'+message+'</h3></div>', 
            fadeIn: 0, 
            fadeOut: 0, 
            timeout: 5000, 
            showOverlay: false, 
            blockMsgClass: 'animated bounceInUp fast notify-ui',
