      $('#select_vendor_edit')[0].disabled = false;
      if($('#select_vendor_edit option:selected').is(':enabled'))
        $('#assign_vendor_btn')[0].disabled = false;
    }
    else
      $('#select_vendor_edit, #assign_vendor_btn').prop('disabled', 'disabled');
  }
  
  function assignVendor(){
