{%- layout none -%}
{%- assign customer_email = customer.email -%}
{%- capture response -%}
{%- if customer -%}
	{%- capture sha1_key -%}D9AbLa5gxfXX_cJ{{ 'now' | date: "%m-%d-%Y" }}{%- endcapture -%}
	{
		"status": 200,
		"email": "{{ customer_email }}",
		"token": "{{ customer_email  | hmac_sha1: sha1_key }}"
	}
{%- else -%}
	{
		"status": 404,
		"error": "No logged-in session found!"
	}
{%- endif -%}
{%- endcapture -%}
{{ response | strip_newlines | remove: "\t" | strip }}